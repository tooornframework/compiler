{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "outDir": "./build/client/types",
    "skipLibCheck": true,
    "allowJs": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./modules",
    "paths": {
      "common/*": ["./common/*"],
      "collector/*": ["./collector/*"],
      "*": ["*"]
    }
  },
  "include": [
    "./modules/client/**/*.ts",
    "./modules/common/**/*.ts"
  ],
  "exclude": [
    "build",
    "resources"
  ]
}